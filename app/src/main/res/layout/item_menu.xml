<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_horizontal"> <!-- Aligns children horizontally centered -->

    <ImageView
        android:padding="8dp"
        android:src="@drawable/ic_baseline_home_24"
        android:id="@+id/item_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:tint="@color/icon_tint_light" />

    <ImageView
        android:src="@drawable/oval"
        android:id="@+id/item_menu_selected"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="4dp" /> <!-- Added margin for spacing -->

</LinearLayout>
